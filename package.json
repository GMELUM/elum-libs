{
  "scripts": {
    "build": "yarn test && tsc && cp -r static/* ./dist",
    "start": "yarn build && cross-env NODE_PATH=./dist nodemon",
    "test": "jest --config jest.config.js"
  },
  "nodemonConfig": {
    "watch": [
      "src",
      "index.ts"
    ],
    "ext": "ts",
    "exec": "tsc && ts-node index.ts"
  },
  "devDependencies": {
    "@types/jest": "^28.1.4",
    "jest": "^28.1.2",
    "nodemon": "^2.0.19",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.2",
    "typescript": "^4.7.4"
  }
}
