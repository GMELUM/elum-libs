{
  "author": { "name": "Artur Frank", "url":"https://vk.com/gmelum"},
  "contributors": [
    {
      "name": "dsedinkin",
      "url": "https://github.com/dsedinkin"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GMELUM/elum-libs.git"
  },
  "scripts": {
    "build": "yarn test && tsc && cp -r static/* ./dist",
    "start": "yarn build && cross-env NODE_PATH=./dist nodemon",
    "release": "git subtree push --prefix dist https://github.com/GMELUM/elum-libs release",
    "test": "jest --config jest.config.json"
  },
  "nodemonConfig": {
    "watch": [
      "src",
      "index.ts"
    ],
    "ext": "ts",
    "exec": "tsc && ts-node index.ts"
  },
  "devDependencies": {
    "@types/jest": "^28.1.4",
    "jest": "^28.1.2",
    "nodemon": "^2.0.19",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.2",
    "typescript": "^4.7.4"
  }
}
